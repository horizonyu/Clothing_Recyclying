/* pages/profile/profile.wxss */
/* 个人中心页面样式 */

.container {
  padding-bottom: 60rpx;
}

/* ===== 用户信息卡片 ===== */
.user-card {
  background: linear-gradient(135deg, #07C160 0%, #06AD56 100%);
  padding: 60rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  flex: 1;
  margin-left: 24rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

.login-tip {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  display: block;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

.edit-hint {
  display: flex;
  align-items: center;
}

.edit-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 8rpx;
}

/* ===== 资产卡片 ===== */
.asset-card {
  margin: -40rpx 20rpx 20rpx;
  position: relative;
  z-index: 10;
}

.asset-grid {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.asset-item {
  flex: 1;
  text-align: center;
}

.asset-divider {
  width: 1rpx;
  height: 60rpx;
  background: var(--border-color);
}

.asset-value {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
}

.asset-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
  display: block;
}

.asset-actions {
  display: flex;
  border-top: 1rpx solid var(--border-color);
}

.asset-btn {
  flex: 1;
  background: none;
  border: none;
  padding: 24rpx;
  font-size: 28rpx;
  color: var(--primary-color);
}

.asset-btn::after {
  border: none;
}

.asset-btn:first-child {
  border-right: 1rpx solid var(--border-color);
}

/* ===== 环保数据 ===== */
.eco-card {
  margin: 0 20rpx 20rpx;
}

.eco-grid {
  display: flex;
  margin-top: 20rpx;
}

.eco-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}

.eco-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
  display: block;
}

.eco-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
  display: block;
}

/* ===== 功能菜单 ===== */
.menu-card {
  margin: 0 20rpx 20rpx;
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
  background: #fff;
}

.menu-item:last-child {
  border-bottom: none;
}

.feedback-btn {
  border: none;
  border-radius: 0;
  text-align: left;
  line-height: inherit;
}

.feedback-btn::after {
  border: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-primary);
}

.menu-tag {
  font-size: 22rpx;
  color: var(--text-placeholder);
  background: var(--bg-color);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.menu-arrow {
  width: 28rpx;
  height: 28rpx;
}

/* ===== 退出登录 ===== */
.logout-section {
  margin: 40rpx 20rpx;
}

.logout-btn {
  background: #fff;
  color: #FA5151;
  font-size: 30rpx;
  padding: 24rpx;
  border: none;
  border-radius: 12rpx;
}

.logout-btn::after {
  border: none;
}

/* ===== 版本号 ===== */
.version {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-placeholder);
  padding: 30rpx;
}

