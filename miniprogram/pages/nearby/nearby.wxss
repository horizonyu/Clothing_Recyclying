/* pages/nearby/nearby.wxss */
/* 附近回收箱页面样式 */

.container {
  height: 100vh;
  background: var(--bg-color);
}

/* ===== 地图视图 ===== */
.map-container {
  position: relative;
  height: 100%;
}

.map {
  width: 100%;
  height: 100%;
}

.map-controls {
  position: absolute;
  right: 30rpx;
  bottom: 100rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* ===== 列表视图 ===== */
.list-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid var(--border-color);
}

.header-title {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.count {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  background: var(--primary-light);
  color: var(--primary-color);
  border-radius: 20rpx;
  font-size: 26rpx;
}

/* ===== 设备列表 ===== */
.device-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.device-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.device-info {
  flex: 1;
  display: flex;
}

.device-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.device-detail {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
  margin-bottom: 8rpx;
}

.device-address {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 12rpx;
}

.device-tags {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.device-distance {
  font-size: 24rpx;
  color: var(--text-placeholder);
}

.device-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 30rpx;
  border-left: 1rpx solid var(--border-color);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: var(--primary-color);
}

/* ===== 空状态 ===== */
.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: var(--text-placeholder);
}

/* ===== 加载状态 ===== */
.loading {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

