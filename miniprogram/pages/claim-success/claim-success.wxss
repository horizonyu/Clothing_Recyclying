/* pages/claim-success/claim-success.wxss */
/* 领取成功页面样式 */

.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #07C160 0%, #F6F6F6 40%);
}

/* ===== 成功头部 ===== */
.success-header {
  text-align: center;
  padding: 60rpx 0;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: var(--primary-color);
  margin: 0 auto 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.success-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #fff;
  display: block;
}

.success-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 16rpx;
  display: block;
}

/* ===== 结果卡片 ===== */
.result-card {
  margin-bottom: 24rpx;
}

.amount-section {
  text-align: center;
  padding: 30rpx 0;
}

.amount-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 16rpx;
}

.amount-value {
  color: #FA5151;
}

.amount-symbol {
  font-size: 36rpx;
}

.amount-num {
  font-size: 72rpx;
  font-weight: 600;
}

.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 20rpx 0;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.info-item {
  text-align: center;
  padding: 20rpx;
  background: var(--bg-color);
  border-radius: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* ===== 成就卡片 ===== */
.achievement-card {
  margin-bottom: 30rpx;
  background: var(--primary-light);
}

.achievement-header {
  margin-bottom: 20rpx;
}

.achievement-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.achievement-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
}

.achievement-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.achievement-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* ===== 操作按钮 ===== */
.action-section {
  margin-top: 40rpx;
}

.action-section .btn {
  margin-bottom: 20rpx;
}

.btn-text {
  background: none;
  border: none;
  color: var(--text-secondary);
  font-size: 28rpx;
  padding: 20rpx;
}

.btn-text::after {
  border: none;
}

/* ===== 分享提示 ===== */
.share-tip {
  margin-top: 40rpx;
  text-align: center;
}

.share-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  font-size: 26rpx;
  color: var(--primary-color);
  padding: 20rpx 40rpx;
}

.share-btn::after {
  border: none;
}

.share-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

