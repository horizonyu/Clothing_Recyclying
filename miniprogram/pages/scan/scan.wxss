/* pages/scan/scan.wxss */
/* 扫码页面样式 */

.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* ===== 扫码区域 ===== */
.scan-area {
  background: linear-gradient(180deg, #07C160 0%, #06AD56 100%);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
}

.scan-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.scan-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #fff;
  display: block;
}

.scan-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 12rpx;
  display: block;
}

.scan-box {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.scan-frame {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.scan-tips {
  text-align: center;
}

.scan-tips text {
  display: block;
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  line-height: 1.6;
}

.scan-btn {
  background: #fff !important;
  color: var(--primary-color) !important;
}

.scan-btn:active {
  background: #f5f5f5 !important;
}

/* ===== 使用说明 ===== */
.instructions {
  margin-bottom: 20rpx;
}

.instruction-list {
  margin-top: 20rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.instruction-item:last-child {
  margin-bottom: 0;
}

.instruction-num {
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-light);
  color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.instruction-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 40rpx;
}

/* ===== 温馨提示 ===== */
.notice {
  background: #FFF8E1;
}

.notice-content {
  margin-top: 16rpx;
}

.notice-content text {
  display: block;
  font-size: 26rpx;
  color: #F57C00;
  line-height: 1.8;
}

/* ===== 弹窗样式 ===== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 85%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalIn 0.3s ease;
}

@keyframes modalIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-placeholder);
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.info-section {
  margin-bottom: 30rpx;
}

.device-name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.info-list {
  background: var(--bg-color);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.info-item.highlight {
  background: var(--primary-light);
  margin: 10rpx -20rpx -20rpx;
  padding: 24rpx 20rpx;
  border-radius: 0 0 12rpx 12rpx;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-value {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.info-value.amount {
  font-size: 36rpx;
  color: #FA5151;
  font-weight: 600;
}

.eco-section {
  background: var(--primary-light);
  border-radius: 12rpx;
  padding: 24rpx;
}

.eco-title {
  font-size: 28rpx;
  color: var(--primary-color);
  margin-bottom: 20rpx;
}

.eco-grid {
  display: flex;
  justify-content: space-around;
}

.eco-item {
  text-align: center;
}

.eco-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
  display: block;
}

.eco-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
  display: block;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
  border-top: 1rpx solid var(--border-color);
}

.modal-footer .btn {
  flex: 1;
  margin: 0;
}

