/* pages/profile-edit/profile-edit.wxss */
/* 个人信息编辑页面样式 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 编辑区块 */
.edit-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

/* 头像编辑 */
.avatar-edit {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.avatar-btn {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  line-height: 1;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #07C160;
}

.avatar-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.5);
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  font-size: 28rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
}

/* 输入框 */
.input-wrap {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.nickname-input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.char-count {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
}

/* 只读字段 */
.readonly-field {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.readonly-value {
  font-size: 28rpx;
  color: #666666;
}

.readonly-tip {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
}

/* 操作按钮 */
.action-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07C160, #00a854);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 24rpx;
}

.save-btn[loading] {
  opacity: 0.7;
}

.cancel-btn {
  width: 100%;
  height: 96rpx;
  background-color: #ffffff;
  color: #666666;
  font-size: 32rpx;
  border-radius: 48rpx;
  border: 2rpx solid #e5e5e5;
}

.cancel-btn::after {
  border: none;
}
